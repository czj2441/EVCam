<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_background">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical"
        android:background="@color/menu_background">

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☰"
            android:textSize="20sp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="副屏显示设置"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⌂"
            android:textSize="20sp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 开关控制 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开启副屏显示"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="将选中的摄像头画面以悬浮窗形式显示在指定屏幕上"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_secondary_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- 摄像头选择 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="选择摄像头"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_camera_selection"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="@color/card_background" />
            </LinearLayout>

            <!-- 屏幕选择 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="显示屏幕 (Display ID)"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_display_selection"
                        android:layout_width="150dp"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/card_background" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_display_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前屏幕分辨率: 未知"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- 位置和大小设置 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="位置与大小"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- X 坐标 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="X 坐标"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/seekbar_x"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="2000" />

                    <TextView
                        android:id="@+id/tv_x_value"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="end"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <!-- Y 坐标 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Y 坐标"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/seekbar_y"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="2000" />

                    <TextView
                        android:id="@+id/tv_y_value"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="end"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <!-- 宽度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="宽度"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/seekbar_width"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="2000" />

                    <TextView
                        android:id="@+id/tv_width_value"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="480"
                        android:gravity="end"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <!-- 高度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="高度"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/seekbar_height"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="2000" />

                    <TextView
                        android:id="@+id/tv_height_value"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="320"
                        android:gravity="end"
                        android:textColor="@color/text_primary" />
                </LinearLayout>
            </LinearLayout>

            <!-- 旋转与边框设置 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高级设置"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- 旋转角度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="悬浮窗旋转"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/spinner_rotation"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/card_background" />
                </LinearLayout>

                <!-- 屏幕方向 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="屏幕方向适配"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/spinner_screen_orientation"
                        android:layout_width="150dp"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/card_background" />
                </LinearLayout>

                <!-- 白色边框 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="显示识别边框 (白色)"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_border"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!-- 保存按钮 -->
            <Button
                android:id="@+id/btn_save_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保存配置并应用"
                android:textSize="20sp"
                android:minHeight="56dp"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/button_text"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
